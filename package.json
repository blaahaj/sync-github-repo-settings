{
  "name": "@blaahaj/sync-github-repo-settings",
  "version": "1.0.0",
  "description": "Manage GitHub repository settings as code",
  "scripts": {
    "build": "concurrently pnpm:build:format pnpm:codegen && pnpm run build:compile",
    "build:format": "prettier --write --list-different .",
    "build:compile": "tsc",
    "build:ts:watch": "tsc --watch",
    "clean": "rm -rf dist generated node_modules",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "start": "node --enable-source-maps ./dist/src/main.js \"$@\"",
    "test": "concurrently 'pnpm:test:*'",
    "test:format": "prettier --check .",
    "test:lint": "eslint",
    "test:unit": "echo \"WARNING: no unit tests\" >&2"
  },
  "bin": {
    "sync-github-repo-settings": "./dist/src/main.js"
  },
  "keywords": [],
  "author": "Rachel Evans <rachel@rachelevans.org>",
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "type": "module",
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.15.1",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@parcel/watcher": "^2.5.1",
    "@types/node": "^25.0.2",
    "@types/write-file-atomic": "^4.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "prettier-cli": "^0.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@blaahaj/remap-errno": "^1.0.1",
    "commander": "^14.0.2",
    "effect": "^3.19.10",
    "write-file-atomic": "^7.0.0",
    "yaml": "^2.8.2"
  }
}
